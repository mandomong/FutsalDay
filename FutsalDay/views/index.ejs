<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <!-- css -->
    <link href="/css/main_css.css" rel="stylesheet" type="text/css">
    <!-- library -->
    <script src="/lib/jquery.min.js"></script>
    <script src="/lib/angular.js"></script>

    <!-- custom module -->

    <title>MANDOO DAY</title>
  </head>
  <body id="center">
    <div>
      <div id="title" class="font_bmd fs25">MANDOO TEST</div>
      <div id="nav" class="font_bmd">
        <ul>
          <li><a class="active" href="/home">Home</a></li>
          <li><a href="/reservation">Reservation</a></li>
          <li><a href="/contact">Contact</a></li>
          <li><a href="/about">AboutUs</a></li>
        </ul>
      </div>
    </div>
    <div id="img_frame">
      <div>
        <img id="main_img_1" class="main_img" src="/images/CampNou.jpg" alt="CampNou" />
      </div>
      <div>
        <img id="main_img_2" class="main_img" src="/images/oldTrafford.jpg" alt="oldTrafford" />
      </div>
    </div>
    <div id="notice" class="underDiv font_bmd fs15">
      Notice & Event<br/>

    </div>
    <div class="underDiv fs15">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>TITLE</th>
            <th>CONTENT</th>
            <th>DATE</th>
          </tr>

          <% for(var i=0; i<results.length; i++) { %>
          <tr>
            <td><%= results[i].id %></td>
            <td><%= results[i].title %></td>
            <td><%= results[i].content %></td>
            <td><%= results[i].date %></td>
          <tr>
          <% } %>

        </thead>
        <tbody>

        </tbody>
      </table>

    </div>

    <div class="underDiv font_bmd fs15" style="text-align: right; border-top: 1px solid #333; padding: 10px" >
      <span>Made By MandoMong</span>
    </div>

  </body>
  <script type="text/javascript">

  // image resizing
  $(document).ready(function() {

    $("#img_frame > div:gt(0)").hide();
    setInterval(function(){
    $('#img_frame > div:first')
      .fadeOut(1500)
      .next()
      .fadeIn(1500)
      .end()
      .appendTo('#img_frame');
    },  5000);

  });
  </script>

</html>
